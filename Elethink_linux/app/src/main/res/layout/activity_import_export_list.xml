<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/blue">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/frame_top"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importing or exporting list"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/light_blue"
            android:textStyle="bold"/>

        <ImageButton
            android:contentDescription="Fleche_retour"
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="56dp"
            android:src="@drawable/back_icon_blue"
            android:background="@color/blue"
            android:paddingTop="2dp"
            android:layout_marginTop="2dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameLayout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="80dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/button_menu_shape"
                android:text="@string/import_list"
                android:textColor="@color/light_blue"
                android:padding="5dp"
                android:id="@+id/button_import"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/button_menu_shape"
                android:text="@string/export_list"
                android:textColor="@color/light_blue"
                android:padding="5dp"
                android:id="@+id/button_export"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>